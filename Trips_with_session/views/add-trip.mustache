    <h4>Enter Trip Details</h4>
<form action='/add-trip' method="POST">
  <div class="form-row">
    <div class="col-6">
    <label for="formGroupExampleInput">Trip Title</label>      
    <input type="text" class="form-control" name="title" placeholder="Enter Trip Title">
    </div>
    <div class="col-3">
        <label for="formGroupExampleInput2">Departure Date</label>
        <input type="date" class="form-control" name="departureDate">
    </div>
    <div class="col-3">
        <label for="formGroupExampleInput2">Return Date</label>
        <input type="date" class="form-control" name="returnDate"  placeholder="Returned on:">
    </div>
    <div class="col-12">
        <label for="formGroupExampleInput2">Image URL</label>
        <input type="text" class="form-control" name="image" placeholder="paste image url here">
    </div>
  </div>
  <button type="submit" action="/" method="GET">Add</button>
</form>    

